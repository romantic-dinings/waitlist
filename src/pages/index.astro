---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<div class="min-h-screen flex items-center justify-center bg-white relative px-4">
		<div class="hidden md:block">
			<div
				class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-[#FFD9F0]/90 rounded-full blur-[128px]"
			>
			</div>
			<div
				class="absolute bottom-0 right-0 w-[400px] h-[400px] bg-[#FFD9F0]/90 rounded-full blur-[96px]"
			>
			</div>
		</div>

		<div class="md:hidden">
			<div
				class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[100vw] h-[50vh] bg-[#FFD9F0]/90 rounded-full blur-[96px]"
			>
			</div>
		</div>

		<div class="text-center relative z-10 w-full max-w-md mx-auto">
			<Image
				src={logo}
				alt="Romantic Dinings Logo"
				class="w-32 h-32 mx-auto mb-6"
			/>
			
			<p class="text-gray-800 text-xl mb-8 font-['Crimson_Text'] leading-relaxed px-4">
				Find your next romantic date spot.<br/>
				Let us handle the planning while you focus on enjoying the vibes.
			</p>

			<h1 class="text-4xl font-bold text-gray-800 mb-2">Romantic Dinings</h1>
			<p class="text-gray-700 mb-8 text-lg">Coming April 2025</p>

			<form
				id="waitlistForm"
				action="https://docs.google.com/forms/d/e/1FAIpQLSfV11ukZOUjLmIHtAliGDlxX81DhHxJu1NIC9Q8hv-1BLKZgg/formResponse"
				method="POST"
				class="space-y-4 w-full max-w-sm mx-auto px-4"
			>
				<div class="relative">
					<svg 
						class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-black/70" 
						viewBox="0 0 24 24" 
						fill="none" 
						stroke="currentColor" 
						stroke-width="2" 
						stroke-linecap="round" 
						stroke-linejoin="round"
					>
						<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
						<polyline points="22,6 12,13 2,6" />
					</svg>
					<input
						type="email"
						name="entry.1152334104"
						placeholder="Enter your email"
						class="w-full pl-10 pr-4 py-3 rounded-lg bg-[#FFD9F0] border-none focus:outline-none focus:ring-2 focus:ring-[#FFD9F0] transition text-black placeholder:text-black/70"
						required
					/>
				</div>
				<button
					type="submit"
					class="w-full bg-[#FFD9F0] text-black py-3 rounded-lg hover:bg-[#FFD9F0]/80 transition duration-300 font-medium"
				>
					Join Waitlist
				</button>
			</form>

			<div class="flex justify-center mt-8">
				<a href="https://www.instagram.com/jehyop" target="_blank" rel="noopener noreferrer" class="text-gray-800 hover:text-[#FFD9F0] transition">
					<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
						<path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
					</svg>
				</a>
			</div>
		</div>
	</div>
</Layout>

<script>
	const form = document.getElementById("waitlistForm");

	form?.addEventListener("submit", async (e) => {
		e.preventDefault();
		const formData = new FormData(e.target as HTMLFormElement);

		try {
			await fetch(form.action, {
				method: "POST",
				body: formData,
				mode: "no-cors",
			});

			form.reset();
		} catch (error) {
			alert("Something went wrong. Please try again.");
		}
	});
</script>

<style>
	input::placeholder {
		color: rgba(75, 75, 75, 0.7);
	}

	input {
		color-scheme: light;
	}
</style>
